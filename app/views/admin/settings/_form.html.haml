.row
	.col-md-4.col-xs-12
		-if @setting.errors.any?
			%ul.alert.alert-danger
				-@setting.errors.full_messages.each do |msg|
					%li 
						=msg
	.col-md-8

=form_for([:admin, @setting]) do |f|
	.panel.mb25.mt5
		.panel-heading
			%span.panel-title.hidden-xs
				=verb.capitalize
				настроек
			%ul.nav.panel-tabs-border.panel-tabs
				%li.active
					%a{"data-toggle" => "tab", :href => "#tab1_1"} Общее
		.panel-body.p20.pb10
			.tab-content.pn.br-n.admin-form
				#tab1_1.tab-pane.active
					.section.row.mbn
						.col-md-12.pl15
							.section.mb10
								%label.field.prepend-icon
									=f.text_field :phone, id: 'desctitle', class: 'event-name gui-input br-light light', placeholder: 'Введите первый телефон компании'
									%label.field-icon{:for => "name2"}
										%i.fa.fa-tag
							.section.mb10
								%label.field.prepend-icon
									=f.text_field :phone2, id: 'desctitle', class: 'event-name gui-input br-light light', placeholder: 'Введите второй телефон компании'
									%label.field-icon{:for => "name3"}
										%i.fa.fa-tag
							.section.mb10
								%label.field.prepend-icon
									=f.text_field :mail, id: 'desctitle', class: 'event-name gui-input br-light light', placeholder: 'Введите эл. почту компании'
									%label.field-icon{:for => "name4"}
										%i.fa.fa-tag
							.section.mb10
								%label.field.prepend-icon
									=f.text_field :address, id: 'desctitle', class: 'event-name gui-input br-light light', placeholder: 'Введите адрес компании'
									%label.field-icon{:for => "name5"}
										%i.fa.fa-tag
							.section.mb10
								%label.field.prepend-icon
									=f.text_area :about, id: 'comment', class: 'gui-textarea br-light bg-light', placeholder: 'Описание компании', style: 'height: 160px'
									%label.field-icon{:for => "comment"}
										%i.fa.fa-comments
					%hr.short.alt
						.section.row.mbn
							.col-sm-8
							.col-sm-4
								%p.text-right
									=f.submit 'Сохранить', class: 'btn btn-primary', id: 'submit-data'