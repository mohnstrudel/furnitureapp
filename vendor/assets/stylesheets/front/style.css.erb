@import "../fonts/baufra/fonts.css";

body {
  overflow: hidden;
  
  color: #ffffff;
  font-family: Baufra, Myriad Pro;
}

a {
  color: #ffffff;
  text-decoration: none;
  
  -webkit-transition: all 0.1s ease;
  -moz-transition: all 0.1s ease;
  -o-transition: all 0.1s ease;
  transition: all 0.1s ease;
  
  cursor: pointer;
}

a:hover,
.nav a.active {
  color: #fcc92f;
  text-decoration: none;
}

a:focus {
  outline: 0 !important;
  text-decoration: none;
}

img {
  /* Commented out as of 14/01/2016 because it's causing bad image resizing */
  max-width: 100%;
}

.teamimage {
 /*max-width: 0%;*/
}

ul {
