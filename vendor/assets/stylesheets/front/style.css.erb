.grayscale { 
  -webkit-filter: grayscale(100%);
  -moz-filter: grayscale(100%);
  -ms-filter: grayscale(100%);
  -o-filter: grayscale(100%);
  filter: grayscale(100%);
  filter: url(<%= asset_path('front/grayscale.svg#greyscale')%>);
  filter: gray;
}

.grayscale.hover:hover { 
  -webkit-filter: grayscale(0%);
  -moz-filter: grayscale(0%);
  -ms-filter: grayscale(0%);
  -o-filter: grayscale(0%);
  filter: none;
}

.parallax-viewport {
  position: relative;     /* relative, absolute, fixed */
  overflow: hidden;
}

.parallax-layer {
  position: absolute;
  top: -5%;
  left: -5%;
  width: 110%;
  max-width: 110%;
  max-height: 110%;
}

.parallax-block {
  overflow: hidden;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.menu-top {
